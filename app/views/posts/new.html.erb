<div class="container">
  <h1 class="text-center fs-1">New Post</h1>
  <%= form_for :posts, url: { action: "create" }, html: {class: "form-horizontal"} do |post| %>
    <div class="form-group">
      <%= post.label :text, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= post.text_field :text, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= post.submit "Create", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
 </div>